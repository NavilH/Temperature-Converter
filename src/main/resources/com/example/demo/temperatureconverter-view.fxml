<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>


<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.demo.TemperatureController">
  <padding>
    <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
  </padding>
  <TextField fx:id="numberInputField" promptText="Enter the temperature: "/>
  <Label text="Which conversion are we doing?" styleClass="styled-label2"/>
  <HBox alignment="CENTER">
    <Button text="Celsius to Fahrenheit" onAction="#celsiusToFahrenheit" />
    <Button text="Celsius to Kelvin"  onAction="#celsiusToKelvin" />
    <Button text="Fahrenheit to Celsius" onAction="#fahrenheitToCelsius" />
  </HBox>
  <HBox alignment="CENTER">
    <Button text="Fahrenheit to Kelvin" onAction="#fahrenheitToKelvin" />
    <Button text="Kelvin to Celsius" onAction="#kelvinToCelsius" />
    <Button text="Kelvin to Fahrenheit" onAction="#kelvinToFahrenheit" />
  </HBox>
    <Label fx:id="resultLabel" text="" styleClass="styled-label"/>
</VBox>
